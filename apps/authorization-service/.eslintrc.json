{
  "extends": [
    "prettier",
    "airbnb",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "class-methods-use-this": 0,
        "no-useless-constructor": 0,
        "no-shadow": 1,
        "no-restricted-syntax": 1,
        "no-await-in-loop": 1,
        "no-loop-func": 1
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
